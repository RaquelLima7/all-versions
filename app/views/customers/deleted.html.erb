<div class="container mt-5">
  <p id="notice"><%= notice %></p>

  <h1>Deleted Customers</h1>

  <table>
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Birthday</th>
        <th>Country</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%= render partial: "customer", collection: @customers %>
