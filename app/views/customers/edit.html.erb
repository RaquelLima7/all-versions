<div class="container mt-5">

  <%= link_to customers_path, class: "text-decoration-none" do %>
    <i class="fas fa-angle-double-left"></i> Back
  <% end %>

  <h3 class="text-muted text-center mt-5">Editing Customer</h3>

  <div class="row mt-2">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="text-dark p-3 shadow">
        <%= render 'form', customer: @customer %>

        <div class="d-flex justify-content-end pe-5 edit-icon">
          <td ><%= link_to customer_path(@customer) do %>
            <i class="fa-solid fa-eye"></i>
          <% end %> </td>
        </div>
      </div>
    </div>
  </div>
</div>

